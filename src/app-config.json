{
    "host": {
        "address": "127.0.0.1",
        "port": 8001,
        "enable_cors": true
    },
    "web": {
        "api_version_v1": "/v1",
        "url_prefix": "/recruiter-api",
        "allowed_origins": ["*"],
        "allowed_methods":   ["GET", "POST", "PUT", "DELETE", "OPTIONS"],
        "allowed_headers":   ["Accept", "Authorization", "Content-Type", "X-CSRF-Token"],
        "exposed_headers":   ["Link"],
        "allow_credentials": true,
        "max_age":           86400
    },
    "db": {
        "host": "mongodb://localhost:27017",
        "database": "recruiter_db",
        "query_timeout_in_sec": 40,
        "recruiters_collection": "recruiters"
    },
    "jwt": {
        "auth_jwt_expiry" : "15m",
        "auth_jwt_refresh_expiry":"1h",
        "auth_jwt_secret": "random", 
        "auth_login_token_expiry" : "11m",
        "auth_login_token_length":8,
        "auth_login_url":"http://localhost:3000/login"    
    },
    "db_debug":false,
    "logging": {
        "text_logging": false,
        "log_level": "DEBUG",
        "log_filename": "platform-recruiter-api.log"
    },
    "mail": {
		"smtp_host": "",
		"smtp_port": "",
		"smtp_user": "",
        "smtp_password": "",
        "from_name": "",
        "from_address": ""
    }
}